@model IEnumerable<GAtreeWebStore.Models.TestData>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<h4> Tests Data - index of all experiment's configuration</h4>
@if (TempData.ContainsKey("message"))
{
    <p class="text-danger">@TempData["message"].ToString()</p>
}
<!--

We need to create a new create with dropdown of the data!!
<a class="btn btn-primary" asp-area="" asp-controller="TestData" asp-action="Create"> Create New test run</a>
    -->

@if (Model.Count() > 0)
{
    <br />
    <table class=" table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class=" text-center"> ID</th>
                <th class=" text-center"> data-ID</th>
                <th class=" text-center"> Fiendly name</th>
                <th class=" text-center"> Notes</th>
                <th class=" text-center">Actions</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center;"> @item.TestData_id</td>
                <td style="text-align:center;">
                    <a asp-controller="Data" asp-action="show" asp-route-id="@item.TestData_data_id">
                        @item.TestData_data_id
                    </a>
                </td>

                <td style="white-space:pre-wrap; word-wrap:break-word"> @item.TestData_friendlyName</td>
                <td style="white-space:pre-wrap; word-wrap:break-word"> @item.TestData_notes</td>
                <td style="text-align:center;">
                    <a asp-controller="Testdata" asp-action="details" asp-route-id="@item.TestData_id" class="btn btn-info ">Show test data details</a>&nbsp;
                    <a asp-controller="TestDataRun" asp-action="index" asp-route-id="@item.TestData_id" class="btn btn-info">Show Runs</a>
                    <a asp-controller="TestDataRun" asp-action="create" asp-route-id="@item.TestData_id" class="btn btn-info">Create Run</a>
                    <a asp-controller="TestData" asp-action="delete" asp-route-id="@item.TestData_id" class="btn btn-danger">Delete</a>
                    <a asp-controller="TestData" asp-action="copydata" asp-route-id="@item.TestData_id" class="btn btn-primary">Copy data to a new testdata</a>
                </td>
            </tr>
        }
    </table>
}
