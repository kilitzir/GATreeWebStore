@model GAtreeWebStore.Models.TestData

@{
    ViewData["Title"] = "Create";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<!--<script src="~/lib/vue/vue.js"></script>  -->


<h1>Create  a new  experiment configuration (testdata) </h1>
<p> iun this page, we create the configuration of a new experminet</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TestData_friendlyName" class="control-label"></label>
                <input asp-for="TestData_friendlyName" class="form-control" required value="Friendly name 1" />
                <span asp-validation-for="TestData_friendlyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestData_notes" class="control-label"></label>
                <input asp-for="TestData_notes" class="form-control" />
                <span asp-validation-for="TestData_notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestData_numberOfMaxTrees" class="control-label"></label>
                <input asp-for="TestData_numberOfMaxTrees" class="form-control" required value="200" />
                <span asp-validation-for="TestData_numberOfMaxTrees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestData_numberOfMaxGenerations" class="control-label"></label>
                <input asp-for="TestData_numberOfMaxGenerations" class="form-control" required value="100" />
                <span asp-validation-for="TestData_numberOfMaxGenerations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestData_mutationPropability" class="control-label"></label>
                <input asp-for="TestData_mutationPropability" class="form-control" required value="0.2" />
                <span asp-validation-for="TestData_mutationPropability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestData_crossoverPropability" class="control-label"></label>
                <input asp-for="TestData_crossoverPropability" class="form-control" required value="0.2" />
                <span asp-validation-for="TestData_crossoverPropability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestData_generationGap" class="control-label"></label>
                <input asp-for="TestData_generationGap" class="form-control" required value="10" />
                <span asp-validation-for="TestData_generationGap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestData_correctionfactor" class="control-label"></label>
                <input asp-for="TestData_correctionfactor" class="form-control" required value="10" />
                <span asp-validation-for="TestData_correctionfactor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestData_data_id" class="control-label"></label>
                <select asp-for="TestData_data_id" class="form-control" asp-items="ViewBag.TypeDropDown" required></select>
            </div>
            <input id="TestData_params" type="hidden" asp-for="TestData_params" value="hidden">
            <!---- multiple records-->
            <p> Here we add any extra parameters that we might want to send to the client. For example the evaluation function.</p>
            <div id="aaa">

                <div class="card mb-3"
                     v-for="(parameter, index) in parameters">
                    <div class="card-body">
                        <span class="float-right" style="cursor:pointer" v-on:click="DeleteParameter(index)">
                            X
                        </span>
                        <h4 class="card-title"> Add Parameter (index: v-bind:src="index:" {{index}}) </h4>

                        <div>
                            <input type="text" class="form-control mb2" placeholder="name" v-model="parameter.name" required>
                            <input type="text" class="form-control mb2" placeholder="job" v-model="parameter.value" required>
                        </div>
                    </div>

                </div>
                <span class="btn btn-success mt-5 mb-5"
                      v-on:click="AddNewParameter">
                    Add new parameter
                </span>
                <span class="btn btn-success mt-5 mb-5"
                      v-on:click="CopyParameters">
                    Copy parameters
                </span>

            </div>

            <!-- end-->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script src="~/js/Testdata/create.js"></script>
